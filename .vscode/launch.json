{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug promisify-custom",
      "program": "${workspaceFolder}/promisify-custom.js"
    },
    {
      "name": "Jest (all)",
      "type": "node",
      "request": "launch",
      "env": {
        "SKIP_COVERAGE": "1"
      },
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceFolder}/node_modules/.bin/jest"
      ],
      "args": [
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229,
    },
    {
      "name": "Jest (this file)",
      "type": "node",
      "request": "launch",
      "env": {
        "SKIP_COVERAGE": "1"
      },
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceFolder}/node_modules/.bin/jest",
        "${relativeFile}"
      ],
      "args": [
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229,
    }
  ]
}